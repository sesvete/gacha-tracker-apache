<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_sign_in_with_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInWithPasswordActivity"
    style="@style/AppBackground"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"
        />

    <TextView
        android:id="@+id/txt_sign_in_password_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeStepGranularity="2sp"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal1"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical1"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal2"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31"
        />

    <TextView
        android:id="@+id/txt_sign_in_password_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeStepGranularity="2sp"
        android:text="@string/email"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal3"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical1"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal4"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"
        />

    <EditText
        android:id="@+id/edit_text_sign_in_password_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="@string/enter_email"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal5"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical1"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal6"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49"
        />

    <TextView
        android:id="@+id/txt_sign_in_password_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeStepGranularity="2sp"
        android:text="@string/password"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal7"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical1"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal8"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        />

    <EditText
        android:id="@+id/edit_text_sign_in_password_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal9"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical1"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal10"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_in_password_sign_in"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeStepGranularity="2sp"
        android:text="@string/sign_in"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal11"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical1"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal12"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_vertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_vertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_in_password_new_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeStepGranularity="2sp"
        android:text="@string/new_user"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal13"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical3"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal14"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical4"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_in_password_horizontal16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_in_password_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeStepGranularity="2sp"
        android:text="@string/back"
        app:layout_constraintTop_toBottomOf="@id/guideline_sign_in_password_horizontal15"
        app:layout_constraintLeft_toRightOf="@id/guideline_sign_in_password_vertical3"
        app:layout_constraintBottom_toTopOf="@id/guideline_sign_in_password_horizontal16"
        app:layout_constraintRight_toLeftOf="@id/guideline_sign_in_password_vertical4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
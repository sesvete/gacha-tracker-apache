<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GachaFramework" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Toolbar.Theme.GachaWishingTrackerFramework" parent="Base.Theme.GachaFramework">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.NavigationExample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationExample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundedDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:windowBackground">@drawable/dialog_transparent_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppBackground" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/light_purple</item>
    </style>

    <style name="MyCustomDivider">
        <item name="android:background">@color/light_purple</item>
    </style>

    <style name="MyNavigationMenu" parent="Widget.Material3.NavigationView">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="Theme.GachaFramework" parent="Base.Theme.GachaFramework" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gacha_logo_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyNavHeader" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>